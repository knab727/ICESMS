<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.kacper.icecall.ui.seizuredetect.fragments.SeizureICENumbersFragment"
    android:background="@color/colorSecondaryApp">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:listSelector="@color/colorListHighlight"
        android:id="@+id/seizuredetect_iceNumber_list"/>
    <TextView
        android:id="@+id/seizuredetect_empty_icelist"
        android:text="@string/seizuredetect_empty_ice"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        style="@android:style/TextAppearance.Large"
        android:gravity="center"/>
</RelativeLayout>
